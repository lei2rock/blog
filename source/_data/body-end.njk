{# Grid Styles #}
{% if page.type in ['friends', 'photos'] %}
    <script src="https://cdn.jsdelivr.net/npm/minigrid@3.1.1/dist/minigrid.min.js"></script>

    {% if page.type in ['photos'] %}
        <script src=" {{url_for(theme.js)+ '/photos.min.js' }} "></script>
    {% elseif page.type in ['friends'] %}
        <script src=" {{url_for(theme.js)+ '/friends.min.js' }} "></script>
    {% endif %}

{% endif %}

{# Comment Locating #}
{% if page.comments or post.comments %}
    <script type="text/javascript">
        if(window.location.hash){
            var checkExist = setInterval(function() {
                if ($(window.location.hash).length) {
                    $('html, body').animate({scrollTop: $(window.location.hash).offset().top-90}, 1000);
                    clearInterval(checkExist);
                }
            }, 100);
        }
    </script>
{% endif %}